<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7002fc"
        tools:context=".ElevatorActivity">

    <TextView
            android:text="電梯模式"
            android:fontFamily="@font/noto_sans_tc_bold"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toEndOf="@+id/imageView" />

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/escalator_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/service_tv"
            app:layout_constraintBottom_toBottomOf="@+id/service_tv"
            android:id="@+id/imageView"
            android:layout_marginStart="74dp"
            />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/escalator_circle"
            android:layout_marginTop="100dp"
    >
    </ImageView>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/escalator_circle_shadow"
            android:layout_marginTop="100dp"
            android:elevation="-20dp"
            >
    </ImageView>
    <TextView
            android:layout_width="180dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/command_tv"
            android:fontFamily="@font/noto_sans_tc_bold"
            android:textColor="#430063"
            android:textSize="40dp"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    <com.airbnb.lottie.LottieAnimationView
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            android:id="@+id/lottie_up_direction"
            android:layout_width="350dp"
            android:layout_height="600dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:lottie_rawRes="@raw/up_direction"
            app:lottie_autoPlay="false"
            android:scaleType="centerCrop"
            android:elevation="-10dp"
        />

    <com.airbnb.lottie.LottieAnimationView
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            android:id="@+id/lottie_down_direction"
            android:layout_width="350dp"
            android:layout_height="600dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:lottie_rawRes="@raw/down_direction"
            app:lottie_autoPlay="false"
            android:scaleType="centerCrop"
            android:elevation="-10dp"
            />
       <com.airbnb.lottie.LottieAnimationView
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            android:id="@+id/lottie_stop"
            android:layout_width="550dp"
            android:layout_height="600dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:lottie_rawRes="@raw/stop"
            app:lottie_autoPlay="false"
            android:scaleType="centerCrop"
            android:elevation="-10dp"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
